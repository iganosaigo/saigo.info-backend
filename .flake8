[flake8]
# flake-comprehesion
extend-select = C4
import-order-style = google
max-line-length = 88
enable-extensions=G # logging-format
max-complexity = 10

# bugbear fix for fastapi.Depends function calls in argument defaults
extend-immutable-calls = Depends, deps.AuthCheck, Query

exclude =
    # Migrations are mostly autogenerated
    *alembic/*
    *experiment.py
    *venv/*

ignore =
    # id built-in shadowing beacause of id column in DB
    A002 A003
    # Unexpected comment identation
    # E116
    # Temporary ignore print
    # T001
    # Temp ignore unsused modules
    F401
    # Temp ignore commented code
    E800
    # Ignore docstring absence in __init__ of classes
    D107
