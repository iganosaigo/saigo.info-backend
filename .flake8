[flake8]
# flake-comprehesion
extend-select = C4
max-line-length = 88
enable-extensions=G # logging-format
max-complexity = 10

# bugbear fix for fastapi.Depends function calls in argument defaults
extend-immutable-calls = Depends, deps.AuthCheck, Query

exclude =
    # Migrations are mostly autogenerated
    *alembic/*
    *experiment.py
    *venv/*

ignore =
    # Disable import-order in favour isort
    I100
    I101
    I201
    # line break before binary operator
    W503
    # Allow mutable data for argument default
    B006
    #
    # id built-in shadowing beacause of id column in DB
    A002 A003
